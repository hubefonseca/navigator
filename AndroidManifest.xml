<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="mobilis.examples.navigator"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></uses-permission>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
		<uses-library android:name="com.google.android.maps" />
		<activity android:name=".NavigatorActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<activity android:name="mobilis.examples.navigator.puc.NavigatorPUCActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<service android:name="mobilis.examples.navigator.NavigatorComponentLoader">
			<intent-filter>
				<action android:name="loc"></action>
				<action android:name="mobilis.examples.navigator.NavigatorComponent"></action>
			</intent-filter>
		</service>
		<service android:name="mobilis.examples.navigator.puc.NavigatorPUCComponentLoader">
			<intent-filter>
				<action android:name="loc.br.rio.puc"></action>
			</intent-filter>
		</service>
    </application>
    
    <uses-sdk android:minSdkVersion="3" />
</manifest>